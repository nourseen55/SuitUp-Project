@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@model clothes_store.Models.Category
@{
    Layout = "_MyLayout";
}
@section create{
    <div class="container">
        <form asp-action="SaveAdd" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Name:</label>
                <input type="text" asp-for="Name" class="form-control" id="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label for="Image" class="form-label">Image:</label>
                <input type="file" asp-for="Image" class="form-control" accept="image/*">
                <span asp-validation-for="Image" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label for="largeCategoryId" class="form-label">largeCategory:</label>
                <input type="text" asp-for="largeCategoryId" class="form-control" id="largeCategoryId" />
                <span asp-validation-for="largeCategoryId" class="text-danger"></span>

            </div>
            <button type="submit" class="btn btn-primary" style="color:white">Create</button>
        </form>
    </div>
}