@model List<Product>
    @{
        Layout = "~/Views/Shared/_MyLayout.cshtml";
    }
    @section indexproduct {

        <style>
            .material-symbols-outlined {
                font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
                padding: 7px;
                cursor: pointer;
            }

            .product-icons {
                display: flex;
                align-items: center;
            }

                .product-icons img {
                    margin-right: 5px; /* Adjust spacing between icons */
                }
        </style>
        <div class="product-section">
            <div class="container">
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
                            <div class="product-item" data-product-id="@product.Id">
                                <!-- Moved the product-item class here -->
                                <a asp-action="details" asp-controller="product" asp-route-id="@product.Id">
                                    <img style="width: 300px; height: 300px;border-radius: 10px;" src="~/img/gallery/@product.urlimg" class="img-fluid product-thumbnail">
                                    <h3 class="product-title">@product.Name</h3>
                                </a>
                                <strong class="product-price">$@product.Price</strong>
                                <div class="d-flex justify-content-center align-items-center">

                                    <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn mx-2 btn-primary " style="color:white">Edit</a>
                                    <a href="@Url.Action("Delete", "Product", new { id = product.Id })" class="btn ml-2 " style="background-color:grey;color:white">Delete</a>
                                </div>

                             
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

       
    }
