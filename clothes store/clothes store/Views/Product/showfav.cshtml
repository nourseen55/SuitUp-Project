@model List<Product>
@{
	Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<style>
	.btn-lg {
		transform: scale(1.1);
		transition: transform 0.2s;
		color: silver
	}

		.btn-lg:hover {
			color: sienna;
			transform: scale(1.3);
		}

</style>
@section indexproduct {
	<div class="product-section">
		<div class="container">
			<div class="row">
				<h2 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">My Favorites</h2>
				<hr style="font-weight:bolder;color:black" />
				<br /><br />
				@if (Model != null && Model.Count > 0)
				{
					@foreach (var product in Model)
					{
						<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
							<a class="product-item" asp-action="details" asp-controller="product" asp-route-id="@product.Id">

								<img src="/img/gallery/@product.urlimg" style="width: 300px; height: 300px;border-radius: 10px;" class="img-fluid product-thumbnail">
								<h3 style="font-size: 20px;font-family:'Times New Roman', Times, serif " class="product-title">@product.Name</h3>
								<strong class="product-price">$@product.Price</strong>
							</a>
						</div>

					}
				}
				else
				{
					<center>
						<br /><br /><br /><br />
						<h5>Your favourites is empty. </h5>
						<br /><br />
						<button class="btn btn-lg btn-light"><a asp-action="index" asp-controller="home">Go Shopping</a></button>
					</center>
				}

			</div>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

}

