
@{
    Layout = "_MyLayout";
}

    <div class="container">
        <h2>Product Details</h2>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">ID: @Model.Id</h4>
                <h4 class="card-title">Name: @Model.Name</h4>
                <h4 class="card-title">Name: @Model.Price</h4>
                <h4 class="card-title">Name: @Model.urlimg</h4>
                <h4 class="card-title">Name: @Model.Category_id</h4>
            </div>
        </div>

        <form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post" class="mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

