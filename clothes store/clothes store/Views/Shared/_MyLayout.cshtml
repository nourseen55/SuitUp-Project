<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- ===============================================-->
    <!--    Document Title-->
    <!-- ===============================================-->
    <title>SuitUP |Clothes Store</title>


    <!-- ===============================================-->
    <!--    Favicons-->
    <!-- ===============================================-->
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/favicons/favicon-16x16.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicons/favicon.ico">
    <link rel="manifest" href="~/img/favicons/manifest.json">
    <meta name="msapplication-TileImage" content="~/img/favicons/mstile-150x150.png">
    <meta name="theme-color" content="#ffffff">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/theme.css" rel="stylesheet" />

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/tiny-slider.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- ===============================================-->
    <!--    Stylesheets-->
    <!-- ===============================================-->
    <link href="~/css/theme.css" rel="stylesheet" />


</head>


<body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> <!-- Ensure jQuery is included -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script> <!-- Include Bootstrap JavaScript -->
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <style>
        .navbar-nav .nav-link {
            transition: color 0.3s ease, text-decoration 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: sienna;
                text-decoration: underline;
            }

        .navbar {
            background-color: aliceblue;
        }
    </style>

    <main class="main" id="top">
        <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3 d-block" data-navbar-on-scroll="data-navbar-on-scroll">
            <div class="container">
                <a class="navbar-brand d-inline-flex" asp-action="Index" asp-controller="Home">
                    <span class="text-1000 fw-bold ms-2" style="font-size: 20px;font-family:'Times New Roman', Times, serif;">SuitUp</span>
                </a>
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse border-top border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item px-2"><a class="nav-link fw-medium active" aria-current="page" asp-controller="Category" asp-action="Index">Women</a></li>
                        <li class="nav-item px-2"><a class="nav-link fw-medium" asp-controller="Category" asp-action="IndexM">Men</a></li>
                        <li class="nav-item px-2"><a class="nav-link fw-medium" href="@Url.Action("indexkids", "Category")">Kids</a></li>
                        <li class="nav-item px-2"><a class="nav-link fw-medium" href="@Url.Action("index", "product")">All Products</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Administration
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-action="Add" asp-controller="Category">Add Category</a></li>
                                    <li><a class="dropdown-item" asp-action="Create" asp-controller="Product">Add Product</a></li>
                                    <li><a class="dropdown-item" asp-action="IndexAdmin" asp-controller="Category">Edit Category</a></li>
                                    <li><a class="dropdown-item" asp-action="IndexAdmin" asp-controller="Product">Edit Product</a></li>
                                    <li><a class="dropdown-item" asp-action="New" asp-controller="Role">Add Role</a></li>
                                    <li><a class="dropdown-item" asp-action="AddAdmin" asp-controller="Account">Add Admin</a></li>


                                </ul>
                            </li>
                        }
                    </ul>

                    <form class="d-flex">
                        <a class="text-1000" asp-action="Index" asp-controller="Cart">
                            <svg class="feather feather-shopping-cart me-3" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="9" cy="21" r="1"></circle>
                                <circle cx="20" cy="21" r="1"></circle>
                                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                            </svg>
                        </a>
                    </form>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="logout">Logout</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Welcome @User.Identity.Name</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="login" asp-controller="Account">
                                    <svg class="feather feather-user me-3" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-action="showfav" asp-controller="product">
                                <svg class="feather feather-heart me-3" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                </svg>
                            </a>
                        </li>
                    </ul>

                    <div class="search-container">
                        <a href="#" id="searchButton" class="search-icon">
                            <svg class="feather feather-search" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="11" cy="11" r="8"></circle>
                                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                            </svg>
                        </a>
                        <form id="searchForm" action="@Url.Action("Search", "Home")" method="get" style="display: none;">
                            <input type="text" id="searchInput" class="search-input" placeholder="Search..." name="SearchByName" value="@ViewData["Filter"]">
                            <button type="submit" class="search-icon">
                                <svg class="feather feather-search" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>

        @RenderSection("indexproduct", false)
        <br />
        <br />
        <br />
        @RenderBody()
        @RenderSection("index", false)
        @RenderSection("Edit", false)
        @RenderSection("Editpro", false)
        @RenderSection("create",false)
        @RenderSection("Checkout",false)
        @RenderSection("MainContent", required: false)
        @RenderSection("AddAdmin",false)

        <aside>
            @RenderSection("Sidebar", required: false) <!-- This will render the sidebar section if defined in the view -->
        </aside>

        <br />
        <br />
        <br />
        <style>
            .btn-lg {
                transform: scale(1.1);
                transition: transform 0.2s;
            }

                .btn-lg:hover {
                    transform: scale(1.3);}

            .dropdown-menu .dropdown-item:hover {
                transform: scale(1.3); /* Increase the size of the item on hover */
                margin-top: -5px; /* Adjust the top margin to make room for expansion */
                margin-bottom: -5px; /* Adjust the bottom margin to make room for expansion */
                padding: 0.5rem 1rem; /* Maintain padding to ensure proper spacing */
                color: gray; /* Change the text color on hover */
            }
            
        </style>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const searchButton = document.getElementById('searchButton');
                const searchForm = document.getElementById('searchForm');

                // Add click event listener to the search button
                searchButton.addEventListener('click', function (event) {
                    event.preventDefault();

                    // Toggle visibility of search button and search form
                    searchButton.style.display = 'none';
                    searchForm.style.display = 'inline-block';
                });
            });

        </script>




        <section class="py-0 pt-7">

            <div class="container">
                <div class="row">
                    <div class="col-6 col-lg-2 mb-3">
                        <h5 class="lh-lg fw-bold text-1000">Company Info</h5>
                        <ul class="list-unstyled mb-md-4 mb-lg-0">
                            <li class="lh-lg"><a class="text-800 text-decoration-none" href="@Url.Action("aboutus","home")">About Us</a></li>
                            <li class="lh-lg"><a class="text-800 text-decoration-none" href="@Url.Action("feedback", "home")">FeedBack</a></li>

                        </ul>
                    </div>
                    <div class="col-6 col-lg-2 mb-3">
                        <h5 class="lh-lg fw-bold text-1000">Help &amp; Support</h5>
                        <ul class="list-unstyled mb-md-4 mb-lg-0">
                            <li class="lh-lg"><a class="text-800 text-decoration-none" href="@Url.Action("Shippinginfo","home")">Shipping Info</a></li>
                            <li class="lh-lg"><a class="text-800 text-decoration-none" href="@Url.Action("PaymentMethod","home")">Payment Methods</a></li>
                            <li class="lh-lg"><a class="text-800 text-decoration-none" href="@Url.Action("privacy","home")">Privacy Policy</a></li>


                        </ul>
                    </div>
                    <div class="col-6 col-lg-2 mb-3">
                        <h5 class="lh-lg fw-bold text-1000">Shop By</h5>
                        <ul class="list-unstyled mb-md-4 mb-lg-0">
                            <li class="lh-lg"><a class="text-800 text-decoration-none" href="@Url.Action("index","category")">Women</a></li>
                            <li class="lh-lg"><a class="text-800 text-decoration-none" href="@Url.Action("indexm","category")">Men</a></li>
                            <li class="lh-lg"><a class="text-800 text-decoration-none" href="@Url.Action("indexkids","category")">Kids</a></li>
                            <li class="lh-lg"><a class="text-800 text-decoration-none" href="@Url.Action("index", "product")">All Product</a></li>
                        </ul>
                    </div>

                </div>
                <div class="border-bottom border-3"></div>
                <div class="row flex-center my-3">
                    <div class="col-md-6 order-1 order-md-0">
                        <h1 class=" text-center text-md-start text-capitalize " style="font-size: 30px;font-family:'Times New Roman', Times, serif ">
                            SuitUp
                        </h1>
                    </div>

                </div>
        </section>


    </main>
</body>
</html>

