            <script>
                var currentProductId; // Global variable to store the current product ID
                function openModal(itemName, productId) {
                    var modal = document.getElementById('myModal');
                    var modalImg = document.getElementById('modalImg');
                    var squareImg = document.getElementById('squareImg');

                    if (itemName === "Blue Dress") {
                        modalImg.src = "./img/gallery/sbluedress.jpg";
                        squareImg.src = "./img/gallery/bluedress.jpg";
                    } else if (itemName === "Pink Shirt") {
                        modalImg.src = "./img/gallery/spinkshirt.jpg";
                        squareImg.src = "./img/gallery/pinkshirt.jpg";
                    } else if (itemName === "Blue Shirt") {
                        modalImg.src = "./img/gallery/sblueshirt.jpg";
                        squareImg.src = "./img/gallery/blueshirt.jpg";
                    }



                    currentProductId = productId;
                    modal.style.display = "block";

                }

                // Function to close the modal
                // function closeModal() {

                //     var modal = document.getElementById('myModal');
                //     modal.style.display = "none";
                // }

                // Close the modal when clicking outside of it
                window.onclick = function (event) {
                    var modal = document.getElementById('myModal');
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }


                // Function to handle the "Get the item" button click
                function redirectToDetailsPage() {
                    var detailsUrl;
                    if (currentProductId === 1) {
                        detailsUrl = "/Product/Details/21"; // URL for product ID 1
                    } else if (currentProductId === 2) {
                        detailsUrl = "/Product/Details/23"; // URL for product ID 2
                    } else if (currentProductId === 3) {
                        detailsUrl = "/Product/Details/22"; // URL for product ID 3
                    } else {
                        detailsUrl = "/Product/Details/"; // Default URL if product ID is not specified
                    }

                    // Redirect the user to the Details view
                    window.location.href = detailsUrl;
                }
            </script>
